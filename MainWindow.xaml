<Window x:Class="AbstractFactoryExample.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Фигуры" Height="400" Width="400">
    <StackPanel Margin="20">
        <ComboBox Name="ColorComboBox" SelectionChanged="ColorComboBox_SelectionChanged">
            <ComboBoxItem Content="Красный" Tag="Red" />
            <ComboBoxItem Content="Зеленый" Tag="Green" />
            <ComboBoxItem Content="Синий" Tag="Blue" />
        </ComboBox>
        <Button Name="CircleButton" Click="CircleButton_Click">Создать круг</Button>
        <Button Name="SquareButton" Click="SquareButton_Click">Создать квадрат</Button>
        <Button Name="TriangleButton" Click="TriangleButton_Click">Создать треугольник</Button>
        <Canvas Name="DrawingCanvas" Width="300" Height="300" Background="White" />
    </StackPanel>
</Window>